<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3C41"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/start"
        android:shadowColor="#000"
        android:shadowRadius="10"
        android:shadowDx="10"
        android:shadowDy="10"
        android:background="@drawable/shadow"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="630dp"
        android:fontFamily="@font/iceland"
        android:text="Let's Get Started"
        android:textColor="#C1EDFD"
        android:textSize="18dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>

    <TextView
        android:id="@+id/created"
        android:layout_width="137dp"
        android:layout_height="22dp"
        android:fontFamily="@font/jost_light"
        android:shadowColor="#000000"
        android:text="created by Norbert Kis"
        android:textAlignment="center"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="680dp"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/title"
        android:shadowRadius="10"
        android:shadowDx="10"
        android:shadowDy="10"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/iceland"
        android:shadowColor="#000000"
        android:text="QR Code\n Access Control System"
        android:textAlignment="center"
        android:textColor="#C1EDFD"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="4500dp"
        android:layout_height="450dp"
        android:layout_marginTop="210dp"
        android:alpha="1"
        app:layout_constraintBottom_toTopOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:srcCompat="@drawable/logo_first" />

</RelativeLayout>