<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#2D3C41">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/iceland"
            android:shadowColor="#000000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="@string/qr_code_n_access_control_system"
            android:textAlignment="center"
            android:textColor="#C1EDFD"
            android:textSize="30dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:background="@drawable/shape"
            android:orientation="vertical">

            <EditText
                android:id="@+id/lname"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/iceland"
                android:hint="Last Name"
                android:inputType="textCapWords"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lname"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/iceland"
                android:hint="First Name"
                android:inputType="textCapWords"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/emailaddress"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fname"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/iceland"
                android:hint="E-mail Address"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/pnumber"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emailaddress"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:digits="0123456789+"
                android:fontFamily="@font/iceland"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <Spinner
                    android:id="@+id/genderS"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/iceland"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/typeS"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:fontFamily="@font/iceland"
                    android:gravity="end"
                    android:textSize="20dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/create"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:layout_below="@+id/genderS"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:background="@drawable/shadow"
                android:fontFamily="@font/iceland"
                android:shadowColor="#000"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"
                android:text="Start Registration"
                android:textColor="#C1EDFD"
                android:textSize="20dp"
                app:backgroundTint="#5E7780" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_light"
                    android:linksClickable="false"
                    android:shadowColor="#000000"
                    android:shadowDx="6"
                    android:shadowRadius="7"
                    android:text="Already have an account?           "
                    android:textAlignment="center"
                    android:textColor="#60FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/signin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_bold"
                    android:linksClickable="true"
                    android:shadowColor="#000000"
                    android:shadowDx="6"
                    android:shadowRadius="7"
                    android:text="                                   Sign In"
                    android:textAlignment="center"
                    android:textColor="#5E7780"
                    android:textColorLink="#5E7780"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>