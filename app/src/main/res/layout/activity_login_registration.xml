<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#2D3C41">
    
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/title"
            android:shadowRadius="10"
            android:shadowDx="10"
            android:shadowDy="10"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/iceland"
            android:shadowColor="#000000"
            android:text="QR Code\n Access Control System"
            android:textAlignment="center"
            android:textColor="#C1EDFD"
            android:textSize="30dp"/>


        <Button
            android:id="@+id/registration"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/shadow"
            android:layout_below="@+id/title"
            android:fontFamily="@font/iceland"
            android:shadowColor="#000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="Registration"
            android:textAlignment="center"
            android:textColor="#C1EDFD"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"/>


        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow"
            android:fontFamily="@font/iceland"
            android:layout_below="@+id/registration"
            android:shadowColor="#000"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="10"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#C1EDFD"
            android:textSize="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"/>

        <ImageView
            android:layout_width="410dp"
            android:layout_height="410dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:alpha=".20"
            android:rotationY="-10"
            android:src="@drawable/testtt" />
    </RelativeLayout>
</ScrollView>